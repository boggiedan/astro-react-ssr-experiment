{
  "name": "ssr-experiment",
  "version": "1.0.0",
  "description": "SSR Performance Testing Experiment",
  "type": "module",
  "scripts": {
    "benchmark:astro": "node benchmark/baseline.js --duration 10 --connections 10 --pipelining 1 --url http://localhost",
    "benchmark:astro:peak": "node benchmark/baseline.js --duration 30 --connections 50 --pipelining 4 --url http://localhost",
    "benchmark:astro:stress": "node benchmark/baseline.js --url http://localhost",
    "benchmark:astro:extreme": "node benchmark/baseline.js --stress --url http://localhost",
    "benchmark:php": "node benchmark/baseline.js --duration 10 --connections 10 --pipelining 1 --url http://localhost:8080",
    "benchmark:php:peak": "node benchmark/baseline.js --duration 30 --connections 50 --pipelining 4 --url http://localhost:8080",
    "benchmark:php:stress": "node benchmark/baseline.js --url http://localhost:8080",
    "benchmark:php:extreme": "node benchmark/baseline.js --stress --url http://localhost:8080",
    "benchmark:nodejs": "node benchmark/baseline.js --duration 10 --connections 10 --pipelining 1 --url http://localhost:3000",
    "benchmark:nodejs:peak": "node benchmark/baseline.js --duration 30 --connections 50 --pipelining 4 --url http://localhost:3000",
    "benchmark:nodejs:stress": "node benchmark/baseline.js --url http://localhost:3000",
    "benchmark:nodejs:extreme": "node benchmark/baseline.js --stress --url http://localhost:3000",
    "view-results": "cd astro && npm install && npm run dev -- --open /benchmark-results"
  },
  "devDependencies": {
    "autocannon": "^8.0.0"
  }
}
