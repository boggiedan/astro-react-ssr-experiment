{
  "name": "nodejs-react-ssr",
  "version": "1.0.0",
  "description": "Vanilla Node.js + React SSR with worker support",
  "type": "module",
  "scripts": {
    "build": "npm run build:ts && npm run build:css",
    "build:ts": "tsc",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/assets/styles.css --minify",
    "dev": "npm run build:ts && node --watch dist/server/index.js",
    "start": "node dist/server/index.js",
    "preview": "npm run build && npm start"
  },
  "dependencies": {
    "piscina": "^5.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  }
}
